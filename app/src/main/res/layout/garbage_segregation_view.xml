<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/segregation_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@color/text_title_back"
            android:gravity="center"
            android:maxLines="1"
            android:padding="4dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            autofit:minTextSize="4sp"/>

        <me.grantland.widget.AutofitTextView
            android:id="@+id/segregation_text_note"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:maxLines="3"
            android:textColor="@android:color/black" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <TextView
                android:id="@+id/segregation_type_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:gravity="center" />

            <TextView
                android:id="@+id/segregation_type_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:gravity="center" />

            <TextView
                android:id="@+id/segregation_type_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/segregation_type_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:gravity="center" />

        </GridLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>